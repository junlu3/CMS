@model XL.CHC.Web.Models.EditPasswordViewModel

@{
    ViewBag.Title = "修改密码";
    ViewBag.CurrentPage = "SystemManage_UserManage";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue" id="form_wizard_1">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> 修改密码

                </div>
                <div class="actions">
                    @*<a href="/MembershipUser/Manage" class="btn blue btn-sm">
                        <i class="fa fa-mail-reply"></i> 返回
                    </a>*@
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("EditPassword", "MembershipUser", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Username)
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-3 control-label">旧密码:</label>
                            <div class="col-md-4">
                                @Html.PasswordFor(model => model.OldPassword, new { @class = "form-control", placeholder = "请输入旧密码" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.OldPassword)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">新密码:</label>
                            <div class="col-md-4">
                                @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", placeholder = "请输入新密码" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.NewPassword)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">重复密码:</label>
                            <div class="col-md-4">
                                @Html.PasswordFor(model => model.RepeatNewPassword, new { @class = "form-control", placeholder = "请输入重复密码" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.RepeatNewPassword)
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">提交</button>
                            @*<a href="@Url.Action("Manage", "MembershipUser" )" class="btn default">返回用户列表</a>*@
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>

