@model XL.CHC.Web.Models.MemberShipRoleViewModel
@{
    ViewBag.Title = "编辑角色";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue" id="form_wizard_1">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> 编辑角色
                </div>
                <div class="actions">
                    <a href="/MembershipRole/RoleManage" class="btn blue btn-sm">
                        <i class="fa fa-mail-reply"></i> 返回
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("CreateOrUpdate", "MembershipRole", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    <div class="form-body">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.Id)
                        @Html.HiddenFor(x=>x.isAdmin)
                        <div class="form-group">
                            <label class="col-md-3 control-label">角色名:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.Name)
                                </span>
                            </div>
                        </div>
                        @if (Model.isAdmin)
                        {
                            <div class="form-group">
                                <label class="col-md-3 control-label">公司:</label>
                                <div class="col-md-4">
                                    @Html.DropDownListFor(model => model.Company_Id, Model.Companys, new { @class = "form-control" })
                                    <span class="help-block font-red">
                                        @Html.ValidationMessageFor(x => x.Company_Id)
                                    </span>
                                </div>
                            </div>
                        }                                
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">提交</button>
                            <a href="@Url.Action("RoleManage", "MembershipRole")" class="btn default">返回角色列表</a>
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>

