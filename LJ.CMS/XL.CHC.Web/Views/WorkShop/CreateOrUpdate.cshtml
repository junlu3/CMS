@model XL.CHC.Web.Models.WorkShopViewModel
@{
    ViewBag.Title = "编辑车间";
    ViewBag.CurrentPage = "WorkManage_WorkShopManage_CreateOrUpdate";
}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue" id="form_wizard_1">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> 编辑车间
                </div>
                <div class="actions">
                    <a href="/WorkShop/Index" class="btn blue btn-sm">
                        <i class="fa fa-mail-reply"></i> 返回
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("CreateOrUpdate", "WorkShop", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    <div class="form-body">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label class="col-md-3 control-label">名称:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.WorkShop_Name, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.WorkShop_Name)
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">提交</button>
                            <a href="@Url.Action("Index", "WorkShop" )" class="btn default">返回车间列表</a>
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>