@using XL.CHC.Web.Infrastructure
@{
    var menuItems = HtmlExtention.GetMenuItems();
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/commonCss")
        @Scripts.Render("~/bundles/commonScript")*@
    @Html.Partial("_LayoutScripts")

</head>
<body class="page-header-fixed page-quick-sidebar-over-content">
    <div class="page-header navbar navbar-fixed-top">
        @Html.Partial("_PageHeader")
    </div>
    <div class="clearfix"></div>
    <div class="page-container">
        <div class="page-sidebar-wrapper">
            @Html.Partial("_SideBarMenu", menuItems)
        </div>
        <div class="page-content-wrapper">
            <div class="page-content">
                <div class="row">
                    <div class="col-md-12">
                        @*<h3 class="page-title">
                                @ViewBag.Title
                            </h3>*@
                        <div class="modal" id="divLoading" style="z-index:999; display:none; background-color:darkgray; opacity:0.5">
                            <img src="~/Content/Images/loading.gif" alt="" class="loading">
                        </div>
                    </div>
                </div>
                @Html.Partial("_Notifiations")
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="page-footer">
        <div class="page-footer-inner">
            2016 &copy; 版权所有
        </div>
        <div class="scroll-to-top">
            <i class="icon-arrow-up"></i>
        </div>
    </div>
    <div id="divLoading" style="display:none">
        <div style="width: 100%;height: 100%;background-color: #ddd;position: absolute;top: 0px;left: 0px;opacity: 0.5;"></div>
        <div style="position:absolute;top:50%;left:50%;width:180px;height:40px;background-color:#fff;text-align:center;padding:10px 0px;">
            <img style="background-image:url(../../Content/Images/loading2.gif); background-repeat:no-repeat;height:24px;width:24px; border:none" />
            正在处理中，请稍候...
        </div>
    </div>
</body>
</html>
