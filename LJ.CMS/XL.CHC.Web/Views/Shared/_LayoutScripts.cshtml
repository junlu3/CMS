<script>
    jQuery(document).ready(function () {
        Metronic.init(); // init metronic core components
        Layout.init(); // init current layout
        InitSideMenuBar();
        InitDatePickers();
    });

    function InitDatePickers()
    {
        $('.date-picker').datepicker({
            language: 'zh-CN',
            format:'yyyy-MM-dd',
            forceParse: false,
            autoclose: true,
        });
    }

    function InitSideMenuBar() {
        $(".active").removeClass("active");
        //设置当前页对应的导航栏
        var page = $("#currentPage").attr("value");
        if (page)
        {
            var parent = page.split("_")[0];
            $("#" + parent.trim()).addClass("active");

            $("#" + page.trim()).addClass("active");
        }
       
    }
</script>

