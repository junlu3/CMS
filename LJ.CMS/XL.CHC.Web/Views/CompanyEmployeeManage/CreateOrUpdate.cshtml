@model XL.CHC.Web.Models.CompanyEmployeeViewModel

@{
    ViewBag.Title = "编辑员工";
    ViewBag.CurrentPage = "StaffManage_InfoList";
}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue" id="form_wizard_1">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i> 编辑员工
                </div>
                <div class="actions">
                    <a href="/CompanyEmployeeManage/Index" class="btn blue btn-sm">
                        <i class="fa fa-mail-reply"></i> 返回
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("CreateOrUpdate", "CompanyEmployeeManage", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-body">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label class="col-md-3 control-label">所属公司:</label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => Model.CompanyId, Model.AvailableCompanies, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">姓名:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.UserName)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">身份证号:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.IDCard, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.IDCard)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">性别:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Sex, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.Sex)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">婚否:</label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => Model.MarriedId, Model.AvailableMarried, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">入职时间:</label>
                            <div class="col-md-4">
                                <div class="date-picker input-daterange" data-date-format="yyyy-MM-dd">
                                    <input id="EntryDate" name="EntryDate" type="text" class="form-control" style="text-align:left" value="@(Model.EntryDate.HasValue?Model.EntryDate.Value.ToString("yyyy-MM-dd"):"")" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">离职时间:</label>
                            <div class="col-md-4">
                                <div class="date-picker input-daterange" data-date-format="yyyy-MM-dd">
                                    <input id="LeaveDate" name="LeaveDate" type="text" class="form-control" style="text-align:left" value="@(Model.LeaveDate.HasValue?Model.LeaveDate.Value.ToString("yyyy-MM-dd"):"")" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">上岗时间:</label>
                            <div class="col-md-4">
                                <div class="date-picker input-daterange" data-date-format="yyyy-MM-dd">
                                    <input id="StartPostDate" name="StartPostDate" type="text" class="form-control" style="text-align:left" value="@(Model.StartPostDate.ToString("yyyy-MM-dd"))" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">离岗时间:</label>
                            <div class="col-md-4">
                                <div class="date-picker input-daterange" data-date-format="yyyy-MM-dd">
                                    <input id="EndPostDate" name="EndPostDate" type="text" class="form-control" style="text-align:left" value="@(Model.EndPostDate.HasValue?Model.EndPostDate.Value.ToString("yyyy-MM-dd"):"")" readonly />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">接触有害因素:</label>
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.AdverseFactor, new { @class = "form-control", @rows = "4" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.AdverseFactor)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">总工龄(月):</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.TotalWorkMonthes, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.TotalWorkMonthes)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">接害工龄(月):</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.AdverseMonthes, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.AdverseMonthes)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">工号(月):</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.WorkNumber, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.WorkNumber)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">联系电话:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.ContactPhone, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.ContactPhone)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">车间/部门:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Department, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.Department)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">工种:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.WorkType, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.WorkType)
                                </span>
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label class="col-md-3 control-label">体检状态:</label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => Model.HealthStatusId, Model.AvailableHealthStatus, new { @class = "form-control" })
                            </div>
                        </div>*@
                        <div class="form-group">
                            <label class="col-md-3 control-label">民工:</label>
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => Model.MigrantWorkerId, Model.AvailableMigrantWorker, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">防护措施:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.ProtectType, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.ProtectType)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">邮箱:</label>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.Email)
                                </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">备注:</label>
                            <div class="col-md-4">
                                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", @rows = "3" })
                                <span class="help-block font-red">
                                    @Html.ValidationMessageFor(x => x.Comment)
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue">提交</button>
                            <a href="@Url.Action("Index", "CompanyEmployeeManage" )" class="btn default">返回员工列表</a>
                        </div>
                    </div>
                }
                <!-- END FORM-->
            </div>
        </div>
    </div>
</div>
